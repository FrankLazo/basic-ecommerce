mixin contact-input( label, placeholder, id, name, type = 'text' )
	.contact-input-label
		label( for= id )= label + ':'
		input( type= type, placeholder= placeholder, name= name, id= id )

mixin contact-textarea( label, placeholder, id, name )
	.contact-input-label
		label( for= id )= label + ':'
		textarea( placeholder= placeholder, name= name, id= id, cols= 30, rows= 5 )

mixin contact-submit( value, name )
	.contact-submit
		input.btn-black( type="submit", value= value, name= name, disabled="disabled" )
